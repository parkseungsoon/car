<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jslhrd.carproject.mapper.CarProjectMapper">
	<!-- 전체 리스트 판매리스트 불러오기 -->
	<select id="carSaleList" resultType="com.jslhrd.carproject.domain.purchase.CarDTO">
		select * from db.car
	</select>
	
	<select id="carListOP" resultType="com.jslhrd.carproject.domain.purchase.CarDTO">
    select * from db.car where
     <foreach collection="nameArr" item="name" separator=" AND ">
        <foreach collection="dataArr" item="value" index="idx">
            <if test="nameArr[idx] == name">
                ${name} = #{value}
            </if>
        </foreach>
    </foreach>
</select>

	<select id="carListOP1" resultType="com.jslhrd.carproject.domain.purchase.CarDTO">
    select * from db.car where
   	  <foreach collection="nameArr" item="name" separator=" AND ">
     	   <foreach collection="dataArr" item="value" index="idx">
         	   <if test="nameArr[idx] == name">
         	       ${name} = #{value}
         	   </if>
        	</foreach>
    	</foreach>
    	ORDER BY idx LIMIT #{startIdx},#{endIdx} ;
	</select>
	
	<select id="carListOP2" resultType="com.jslhrd.carproject.domain.purchase.CarDTO">
    select * from db.car where idx LIMIT #{startIdx},#{endIdx} ;
	</select>
</mapper>